<?xml version="1.0" encoding="UTF-8"?>
<configs>
    <!-- Enable Blessed Metal -->
    <append xpath="/traders/trader_item_groups/trader_item_group[@name='modGunMeleeT3']">
        <item name="modGunMeleeBlessedMetal"/>
    </append>
    <append xpath="/traders/trader_item_groups/trader_item_group[@name='schematicsModsCommon']">
        <item name="modGunMeleeBlessedMetalSchematic"/>
    </append>

    <!-- Kevlar Armor Plating Mod and Schematic -->
    <append xpath="/traders/trader_item_groups/trader_item_group[@name='modArmorT3']">
        <item name="modArmorPlatingKevlar"/>
        <item name="modArmorProfiledFittings"/>
        <item name="modArmorProfiledMuffledConnectors"/>
    </append>
    <append xpath="/traders/trader_item_groups/trader_item_group[@name='rareBooks']">
        <item name="cntMunitionsBoxArmySchematic"/>
        <item name="modArmorPlatingKevlarSchematic"/>
        <item name="modArmorProfiledFittingsSchematic"/>
        <item name="modArmorProfiledMuffledConnectorsSchematic"/>
    </append>
    <append xpath="/traders/trader_item_groups/trader_item_group[@name='clothes']">
        <item name="apparelCoatMatrixDuster" prob="0.1"/>
    </append>
    <append xpath="/traders/trader_item_groups/trader_item_group[@name='warmClothes']">
        <item name="apparelCoatMatrixDuster" prob="0.3"/>
    </append>
</configs>
